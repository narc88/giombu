div(class='modal fade', id='myModal', tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
	div(class='modal-dialog')
		div(class='modal-content')
			div(class='modal-header')
				button(type='button', class='close', data-dismiss='modal', aria-hidden='true') &times
				h4(class='modal-title', id='myModalLabel') 
					¿Estás registrado?
			div(class='modal-body')
				form(method='post', action='/users/login', role='forms')
					.form-grup
						label(for='inputUser') Usuario
						input(name='username', type='text', class="form-control required", id='inputUser', placeholder='Ingrese su usuario')
					br
					.form-grup
						label(for='inputPassword') Contraseña
						input(name='password', type='password', class='form-control required', id='inputPassword', placeholder='Contraseña')
					br
					button(name='submit', type='submit', class='btn btn-default') Enviar
			div(class='modal-footer')
				a(href="/users/create") Registrate en Giombu
